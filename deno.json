{
  "tasks": {
    "run": "deno run -A src/cli/cli.ts",
    "check": "deno fmt --check && deno lint && deno check **/*.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts"
  },
  "name": "migadu",
  "version": "v0.2.0",
  "author": "Tim HÃ¥rek Andreassen <tim@harek.no>",
  "source": "https://git.sr.ht/~timharek/migadu-deno",
  "githooks": {
    "pre-commit": "check",
    "pre-push": "check"
  },
  "lint": {
    "include": [
      "./"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-function-return-type"
      ]
    }
  },
  "fmt": {
    "include": [
      "./"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
